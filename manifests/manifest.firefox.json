{
  "manifest_version": 2,
  "name": "Atomic",
  "version": "1.0",
  "description": "Transform your new tab into a minimalist task manager. Focus on what matters with a clean, elegant interface and smart task prioritization.",
  "homepage_url": "https://github.com/aagrawal207/Atomic",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "atomic@example.com"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}